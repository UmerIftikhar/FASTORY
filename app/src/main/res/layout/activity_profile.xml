<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.umeriftikhar.fastory.ProfileActivity">


    <ImageView
        android:alpha="0"
        android:id="@+id/cpu"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/animated_cpu"/>


        <ImageView
            android:alpha="0"
            android:id="@+id/left_right_arrow"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/cpu"
            android:src="@drawable/animated_arrow" />

        <ImageView
            android:alpha="0"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:id="@+id/pallet1"
            android:background="#ffffff"
            android:layout_above="@+id/left_right_arrow"
            android:layout_toEndOf="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Pallet"
            android:id="@+id/button"
            android:layout_alignBottom="@+id/pallet1"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/animated_svg"
            android:layout_alignTop="@+id/left_right_arrow"
            android:layout_toEndOf="@+id/left_right_arrow" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 -> 3"
            android:id="@+id/button4"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/pallet1"
            android:layout_marginBottom="46dp" />

    <ImageView
        android:alpha="0"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:id="@+id/pallet2"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <ImageView
        android:alpha="0"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:id="@+id/pallet3"
        android:layout_above="@+id/pallet2"
        android:layout_alignStart="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 -> 5"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button4"
        android:layout_toEndOf="@+id/button4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="move to 8"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/pallet3"
        android:layout_alignStart="@+id/pallet3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record History"
        android:id="@+id/button5"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button3" />


</RelativeLayout>
